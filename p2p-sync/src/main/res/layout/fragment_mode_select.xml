<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_icon_share"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/btn_p2pModeSelectActivity_send"/>

    <Button
        android:id="@+id/btn_p2pModeSelectActivity_send"
        android:text="@string/send_data"
        style="@style/P2pModeSelect.Buttons.SendReceive"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btn_p2pModeSelectActivity_receive"
        android:text="@string/receive_data"
        style="@style/P2pModeSelect.Buttons.SendReceive"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/btn_p2pModeSelectActivity_send"/>

</androidx.constraintlayout.widget.ConstraintLayout>